div
  header#header.search-toggled
    div(ng-if='enableScrollListener && !disableByEvent', scroll-listener, data-on-scroll-down='hide()', data-on-scroll-top='show()', data-on-scroll-up='show()', data-on-destroy='!disableByEvent && show()', data-disabled='isDisabled')

    div.header-inner.flex-vertical-centered.flex-space-between
      ul.list-inline.all-centered
        li.burger-menu 
          button.btn.btn-link.btn-icon.waves-notransition.hidden-xs(ng-click="toggleSideMenu()", title="{{ 'Toggle sidebar' | translate }}")
            i.mdi.mdi-menu

        li.logo
          a(href='', ui-sref='home')
            img.openpaas-logo(ng-src=`{{logoUrl}}`, src='assets/images/white-logo.svg', alt="{{ 'OpenPaas Logo' | translate }}")

      esn-search-header

      ul.list-inline.all-centered.header-actions
        li.hover-scale-animation.toggle-fullscreen(feature-flag="core.features.header:fullscreen")
          button.btn.btn-link.btn-icon(ng-click='toggleFullScreen()')
            i.md.mdi.mdi-fullscreen
        li.hover-scale-animation(feature-flag="core.features.header:user-notification")
          esn-user-notification-toggler
        li.hover-scale-animation
          application-menu-toggler
        li
          profile-menu.profile-menu
    sub-header-container
  sidebar
  api-notification
